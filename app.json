{
  "id": "com.hiome",
  "version": "1.1.0",
  "compatibility": ">=3.0.0",
  "sdk": 2,
  "name": {
    "en": "Hiome"
  },
  "description": {
    "en": "Add support for Hiome occupancy sensors."
  },
  "category": [
    "appliances"
  ],
  "capabilities": {
    "measure_ppl_count": {
      "type": "number",
      "title": {
        "en": "People count"
      },
      "units": {
        "en": "person(s)"
      },
      "insights": false,
      "desc": {
        "en": "Number of people in a room"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "/assets/ppl_count.svg",
      "$flow": {
        "triggers": [
          {
            "id": "measure_ppl_count_changed",
            "title": {
              "en": "The number of people in the room changed"
            },
            "tokens": [
              {
                "name": "measure_ppl_count",
                "title": {
                  "en": "People count"
                },
                "type": "number",
                "example": 2
              }
            ]
          }
        ]
      }
    }
  },
  "permissions": [],
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "author": {
    "name": "Piotr Grochowski",
    "email": "piotr@grochowski.org"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "GrochowskiPiotr"
      }
    }
  },
  "drivers": [
    {
      "id": "OccupancySensor",
      "name": {
          "en": "Occupancy Sensor"
        },
      "class": "sensor",
      "capabilities": ["alarm_motion","measure_ppl_count"],
      "images": {
        "large": "/drivers/OccupancySensor/assets/images/large.jpg",
        "small": "/drivers/OccupancySensor/assets/images/small.jpg"
      },
      "energy": {
        "approximation": {
          "usageConstant": 0.3
        }
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices", 
          "navigation": {
            "next": "add_my_devices" 
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices" 
        }      ]
    },
    {
      "id": "DoorSensor",
      "name": {
          "en": "Door Sensor"
        },
      "class": "sensor",
      "capabilities": ["alarm_contact"],
      "images": {
        "large": "/drivers/DoorSensor/assets/images/large.jpg",
        "small": "/drivers/DoorSensor/assets/images/small.jpg"
      },
      "energy": {
        "approximation": {
          "usageConstant": 0.3
        }
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices", 
          "navigation": {
            "next": "add_my_devices" 
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices" 
        }      ]
    }        
  ]
}